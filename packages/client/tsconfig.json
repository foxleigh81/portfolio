{
  "exclude": [
    "node_modules",
    "lib-esm",
    "lib",
    "**/*.story*",
    "**/*.spec*"
  ],
  "include": [
    "components",
    "pages"
  ],
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.Iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
