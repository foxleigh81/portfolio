{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "incremental": true,
    "types" : ["node", "jest"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@doc-blocks/*": [
        ".storybook/doc-blocks/*"
      ]
    }
  },
  "include": ["next-env.d.ts", "css.d.ts", "scss.d.ts", "markdown.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
